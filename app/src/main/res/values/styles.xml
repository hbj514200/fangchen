<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="nullAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <style name="welcomeTheme" parent="nullAnimation">
        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowBackground">@drawable/welcome_background</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="mainTheme" parent="nullAnimation">
        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowBackground">@color/bai</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="jiejueTheme" parent="nullAnimation">
        <item name="android:windowBackground">@color/bai</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorControlNormal">#3F51b5</item>        <!-- AppCompatEditText默认状态状态设置底线颜色 -->
        <item name="colorControlActivated">#c6174e</item>     <!-- AppCompatEditText选择的底线颜色 -->
    </style>

    <style name="guanyuTheme" parent="mainTheme">
        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
