<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/jiejue21">

    <TextView
        android:id="@+id/fragment_tou"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_gravity="left"
        android:text="@string/name21"
        android:textSize="23sp"
        android:textColor="#fffdfb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#f5f3ef"
        android:alpha="0.85"
        android:id="@+id/fragment_lizi"
        android:layout_below="@id/fragment_tou"
        android:paddingLeft="40dp"
        android:layout_margin="10dp"
        android:layout_marginLeft="16dp"
        android:text="ax + by + c =0\ndx + ey + f =0"
        android:textSize="21sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <GridView
        android:verticalSpacing="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/fragment_lizi"
        android:id="@+id/gridview"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/jisuan_button"
        android:layout_height="62dp"
        android:layout_width="62dp"
        android:background="@drawable/yunsuan_button" />

</RelativeLayout>
